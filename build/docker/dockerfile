FROM golang:1.17 as build_sales-api
ENV CGO_ENABLED 0
ARG BUILD_REF

COPY . /service

#build binary
WORKDIR /service
RUN go build -ldflags "-X main.build=${BUILD_REF}"

# Run
FROM alpine:3.14
ARG BUILD_DATE
ARG BUILD_REF
COPY --from=build_sales-api /service/service /service/service
WORKDIR /service
CMD [ "./service" ]